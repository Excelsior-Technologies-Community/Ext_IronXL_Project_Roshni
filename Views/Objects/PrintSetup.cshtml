
@{
    ViewData["Title"] = "PrintSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excel Print Setup</h2>

<form asp-controller="Objects" asp-action="PrintSetup" enctype="multipart/form-data" method="post">
    <div>
        <label>Select Excel File:</label>
        <input type="file" name="excelFile" accept=".xlsx" required />
    </div>

    <div>
        <label>Header Text (Center):</label>
        <input type="text" name="headerText" value="My document" />
    </div>

    <div>
        <label>Footer Text (Center):</label>
        <input type="text" name="footerText" value="Page &P of &N" />
    </div>

    <div>
        <label>Header Margin:</label>
        <input type="number" step="0.01" name="headerMargin" value="2.33" />
    </div>

    <div>
        <label>Paper Size:</label>
        <select name="paperSize">
            <option value="A4">A4</option>
            <option value="B4">B4</option>
            <option value="Letter">Letter</option>
            <option value="Legal">Legal</option>
        </select>
    </div>

    <div>
        <label>Print Orientation:</label>
        <select name="orientation">
            <option value="Portrait">Portrait</option>
            <option value="Landscape">Landscape</option>
        </select>
    </div>

    <div>
        <label>Black & White Print:</label>
        <input type="checkbox" name="noColor" checked />
    </div>

    <div>
        <button type="submit">Apply Print Setup</button>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <p style="color: green">@ViewBag.Message</p>
}