
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Excel File and Specify Table</h2>

<form asp-controller="Objects" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Target Table Name</label>
        <input type="text" name="tableName" class="form-control" placeholder="e.g. Products" required />
    </div>
    <div class="form-group mt-2">
        <label>Select Excel File</label>
        <input type="file" name="excelFile" class="form-control" accept=".xlsx,.xls" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Upload & Update</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}