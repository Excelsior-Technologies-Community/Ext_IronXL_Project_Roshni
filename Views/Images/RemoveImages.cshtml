
@{
    ViewData["Title"] = "RemoveImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RemoveImages" method="post" enctype="multipart/form-data">
    <div>
        <label>Select Excel File (.xlsx):</label>
        <input type="file" name="excelFile" accept=".xlsx" required />
    </div>
    <br />
    <button type="submit">Upload and Remove Images</button>
</form>

@if (TempData["DownloadLink"] != null)
{
    <p style="color:green;">Images removed successfully!</p>
    <a href="@TempData["DownloadLink"]" download>Download Updated Excel</a>
}
