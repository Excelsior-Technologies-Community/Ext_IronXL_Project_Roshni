
@{
    ViewData["Title"] = "RemoveImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data" asp-action="RemoveImages">
    <div>
        <label>Select Excel File (.xlsx)</label><br />
        <input type="file" name="excelFile" accept=".xlsx" required />
    </div>
    <br />
    <button type="submit">Upload & Remove Images</button>
</form>

<br />
@if (TempData["Error"] != null)
{
    <div style="color: red;">@TempData["Error"]</div>
}

@if (TempData["Message"] != null)
{
    <div style="color: green;">@TempData["Message"]</div>
}

@if (TempData["DownloadLink"] != null)
{
    <div>
        <a href="@TempData["DownloadLink"]" download>Download Updated Excel File</a>
    </div>
}